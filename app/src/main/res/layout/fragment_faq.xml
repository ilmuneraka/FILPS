<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <RelativeLayout
        android:id="@+id/P1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pertanyaan"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/tambah"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:rotation="-90"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/jawaban"
            android:layout_marginHorizontal="20dp"
            android:background="#C4C4C4" />

        <TextView
            android:id="@+id/pertanyaan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Bagaimana cara mengganti foto profil"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jawaban"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pertanyaan"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="Pilih fitur Profil, klik gambar foto profil Anda, akan terbuka galeri anda, klik gambar yang ingin anda jadikan foto profil\n"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/P2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/P1"
        tools:layout_editor_absoluteX="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageViewP2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pertanyaan2"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/tambahP2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:rotation="-90"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/jawaban2"
            android:layout_marginHorizontal="20dp"
            android:background="#C4C4C4" />

        <TextView
            android:id="@+id/pertanyaan2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Bagaimana cara mengubah data profil"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jawaban2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pertanyaan2"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/poppins_light"
            android:text="Pilih fitur Profil, klik tombol Edit pada bagian kanan bawah, akan tampil halaman Edit Profil, ubah data yang ingin Anda ubah, lalu klik tombol Simpan\n"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Akun"
        android:textColor="#3F5E94"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <RelativeLayout
        android:id="@+id/P3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewKRS"
        tools:layout_editor_absoluteX="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageViewP3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pertanyaan3"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/tambahP3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:rotation="-90"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/jawaban3"
            android:layout_marginHorizontal="20dp"
            android:background="#C4C4C4" />

        <TextView
            android:id="@+id/pertanyaan3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Bagaimana cara menambahkan matkul"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jawaban3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pertanyaan3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="Pilih fitur KRS, pilih Tab Mata Kuliah, akan tampil daftar matkul yang bisa diambil, klik tombol + (plus) pada matkul yang ingin anda ambil, matkul yang anda tambahkan akan masuk Tab Telah Ditambahkan\n"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/P4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        app:layout_constraintTop_toBottomOf="@+id/P3"
        tools:layout_editor_absoluteX="4dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageViewP4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/pertanyaan4"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/tambahP4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/black"
                android:rotation="-90"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_navigate_next_24" />

        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignBottom="@id/jawaban4"
            android:layout_marginHorizontal="20dp"
            android:background="#C4C4C4" />

        <TextView
            android:id="@+id/pertanyaan4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Bagaimana cara menghapus matkul"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jawaban4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pertanyaan4"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/poppins_light"
            android:text="Pilih fitur KRS, pilih Tab Telah Ditambahkan, akan tampil daftar matkul yang telah Anda ambil sebelumnya, klik tombol berbentuk tempat sampah berwarna merah pada matkul yang ingin anda hapus, matkul yang anda hapus akan kembali ke Tab Mata Kuliah\n"
            android:textColor="@color/white"
            android:textSize="10sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textViewKRS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="KRS"
        android:textColor="#3F5E94"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/P2" />

</androidx.constraintlayout.widget.ConstraintLayout>